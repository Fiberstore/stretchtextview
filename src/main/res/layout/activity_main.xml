<?xml version="1.0" encoding="utf-8"?>
<wang.com.stretchtextview.PercentRelativelayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ihealth="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wang.com.stretchtextview.MainActivity">

    <TextView
        android:background="@color/colorAccent"
        android:id="@+id/t"
        ihealth:layout_widthPercent="0.5"
        ihealth:layout_heightPercent="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textSize="100px" />

    <View
        android:id="@+id/v1"
        android:layout_below="@id/t"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/t2"
        android:layout_below="@id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Θυμηθείτε τον Κωδικό Πρόσβασης"
        android:textSize="100px" />

    <View  android:id="@+id/v2"
        android:layout_below="@id/t2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_below="@id/v2"
        android:id="@+id/t3"
        android:layout_width="600px"
        android:layout_height="80px"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Θυμηθείτε τον Κωδικό Πρόσβασης"
        android:textSize="100px" />

    <View
        android:id="@+id/v4"
        android:layout_below="@id/t3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <wang.com.stretchtextview.stretchtextview
        android:id="@+id/t5"
        android:layout_below="@id/v4"
        android:layout_width="600px"
        android:layout_height="120px"
        android:gravity="center"
        android:text="Θυμηθείτε τον Κωδικό Πρόσβασης"
        android:textSize="100px"
        ihealth:layoutalign="ALIGN_CENTER" />

    <wang.com.stretchtextview.CanvasText
        ihealth:layout_widthPercent="0.5"
        ihealth:layout_heightPercent="0.2"
        android:layout_below="@id/t5"
        android:layout_width="600px"
        android:layout_height="110px" />


</wang.com.stretchtextview.PercentRelativelayout>
